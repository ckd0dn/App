<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Activity"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="50dp"
        android:paddingVertical="86dp"
        >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_btn1"
            android:foreground="?selectableItemBackgroundBorderless"
            android:fontFamily="@font/jua_ttf"
            android:text="나의 냉장고"
            android:textColor="#fff"
            android:textSize="28sp">
        </Button>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_btn2"
            android:foreground="?selectableItemBackgroundBorderless"
            android:fontFamily="@font/jua_ttf"
            android:layout_marginTop="30dp"
            android:text="취향저격 레시피 추천"
            android:textColor="#fff"
            android:textSize="28dp">
        </Button>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/home_btn3"
            android:foreground="?selectableItemBackgroundBorderless"
            android:fontFamily="@font/jua_ttf"
            android:text="인기 레시피 추천"
            android:textColor="#fff"
            android:textSize="28dp">
        </Button>
    </LinearLayout>




</LinearLayout>
